{
  "openapi": "3.0.0",
  "info": {
    "title": "Garden Doctor API",
    "version": "1.0.0",
    "description": "A simple Express API for the Garden Doctor app"
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ],
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/users/register": {
      "post": {
        "summary": "Register a new user",
        "tags": ["User"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password",
                "email"],
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User registered successfully"
          },
          "401": {
            "description": "Access denied. No token provided"
          },
          "409": {
            "description": "User already exists"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "summary": "Login a user",
        "tags": ["User"],
        "requestBody": {
          "required": ["email", "password"],
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User logged in successfully"
          },
          "403": {
            "description": "Invalid credentials"
          },
          "401": {
            "description": "Invalid username or password"    
          }
        }
      }
    },
    "/users/forget-password": {
      "post": {
        "summary": "Forget password",
        "tags": ["User"],
        "requestBody": {
          "required": ["email"],
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email"],
                "properties": {
                  "email": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email sent successfully"
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/reset-password": {
      "put": {
        "summary": "Reset password",
        "tags": ["User"],
        "requestBody": {
          "required": ["email", "password"],
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password reset successfully"
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/logout": {
      "post": {
        "summary": "Logout a user",
        "tags": ["User"],
        "responses": {
          "200": {
            "description": "User logged out successfully"
          },
          "401": {
            "description": "Access denied. No token provided"
          }
        }
      }
    },
    "/posts/posts": {
      "get": {
        "summary": "Get all posts",
        "tags": ["Post"],
        "responses": {
          "200": {
            "description": "Posts retrieved successfully"
          },
          "401": {
            "description": "Access denied. No token provided"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/posts/posts/${id}": {
      "get": {
        "summary": "Get a post by ID",
        "tags": ["Post"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post retrieved successfully"
          },
          "401": {
            "description": "Access denied. No token provided"
          },
          "404": {
            "description": "Post not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "put": {
        "summary": "Update a post by ID",
        "tags": ["Post"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "question": {
                    "type": "string"
                  },
                  "plantType": {
                    "type": "string"
                  },
                  "environment": {
                    "type": "string"
                  },
                  "image": {
                    "type": "string",
                    "format": "binary"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Post updated successfully"
          },
          "401": {
            "description": "Access denied. No token provided"
          },
          "404": {
            "description": "Post not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
        }
      },
      "delete": {
        "summary": "Delete a post by ID",
        "tags": ["Post"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post deleted successfully"
          },
          "401": {
            "description": "Access denied. No token provided"
          },
          "404": {
            "description": "Post not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/posts/post": {
      "post": {
        "summary": "Create a new post",
        "tags": ["Post"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "question": {
                    "type": "string"
                  },
                  "plantType": {
                    "type": "string"
                  },
                  "environment": {
                    "type": "string"
                  },
                  "image": {
                    "type": "string",
                    "format": "binary"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Post created successfully"
          },
          "401": {
            "description": "Access denied. No token provided"
          },
          "500": {
            "description": "Internal server error"
          }
        }
        }
      }
    },
    "/posts/search": {
      "post": {
        "summary": "Search for a post",
        "tags": ["Post"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["keyword"],
                "properties": {
                  "keyword": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Post retrieved successfully"
          },
          "401": {
            "description": "Access denied. No token provided"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/replies/replies/${postId}": {
      "get": {
        "summary": "Get all replies for a post",
        "tags": ["Reply"],
        "parameters": [
          {
            "name": "postId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Replies retrieved successfully"
          },
          "401": {
            "description": "Access denied. No token provided"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/replies/reply": {
      "post": {
        "summary": "Create a new reply",
        "tags": ["Reply"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["postId", "text"],
                "properties": {
                  "postId": {
                    "type": "string"
                  },
                  "text": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Reply created successfully"
          },
          "401": {
            "description": "Access denied. No token provided"
          },
          "404": {
            "description": "Post not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/replies/reply/${id}": {
      "put": {
        "summary": "Update a reply by ID",
        "tags": ["Reply"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["text"],
                "properties": {
                  "text": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Reply updated successfully"
          },
          "401": {
            "description": "Access denied. No token provided"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "delete": {
        "summary": "Delete a reply by ID",
        "tags": ["Reply"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Reply deleted successfully"
          },
          "401": {
            "description": "Access denied. No token provided"
          },
          "404": {
            "description": "Reply not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/replies/reply/search": {
      "post": {
        "summary": "Search for a reply",
        "tags": ["Reply"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["keyword"],
                "properties": {
                  "keyword": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Reply retrieved successfully"
          },
          "401": {
            "description": "Access denied. No token provided"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  }
}